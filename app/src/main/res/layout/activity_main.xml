<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andy.iotexp.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:background="@drawable/interior_design"
        android:weightSum="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/sun_rain"
            android:src="@drawable/sun"
            android:paddingLeft="350dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:id="@+id/lighton_off"
            android:src="@drawable/lightbulb"
            android:paddingLeft="350dp"
            android:layout_marginTop="265dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/bt_LED_on"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="LED开"/>
        <Button
            android:id="@+id/bt_LED_off"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="LED开"/>
        <Button
            android:id="@+id/bt_buzzer_on"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="蜂鸣器开"/>
        <Button
            android:id="@+id/bt_buzzer_off"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="蜂鸣器关"/>
        <TextView
            android:id="@+id/tv_infrared_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="红外检测：安全"/>
        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="温度：×××"/>
        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="湿度：×××"/>
        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="天气：雨/晴"/>
        <TextView
            android:id="@+id/tv_light_intensity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="光照强度："/>
        <TextView
            android:id="@+id/tv_sound_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="有无声音：有/无"/>
        <TextView
            android:id="@+id/tv_light_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="有无光照：有/无"/>


    </LinearLayout>

</LinearLayout>
